<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card mt-3">
      <div class="card-header">
        <h2>Log in</h2>
      </div>

        <div id="login-form">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="card-body">
              <div class="field form-group mb-4">
                <%= f.label :email, class: 'font-weight-bold text-muted small' %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-sm' %>
              </div>

              <div class="field form-group mb-4">
                <%= f.label :password, class: 'font-weight-bold text-muted small' %><br />
                <%= f.password_field :password, autocomplete: "current-password", class: 'form-control form-control-sm' %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="field form-group mb-4">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, class: 'font-weight-bold text-muted small' %>
                </div>
              <% end %>
            </div>

            <div class="card-footer  text-center">
              <div class="actions">
                <%= f.submit "Log in", class: 'btn btn-primary btn-block' %>
              </div>
            </div>

          <% end %>
        </div>

        <div class="mt-5">
          <%= render "devise/shared/links" %>
        </div>


    </div>
  </div>
</div>




