<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card mt-3">
      <div class="card-header">
        <h2>Forgot your password?</h2>
      </div>
      <div id="forgot-password-form">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <div class="card-body">
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field form-group">
              <%= f.label :email, class: 'font-weight-bold text-muted small' %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-sm' %>
            </div>
          </div>

          <div class="card-footer text-center">
            <div class="actions">
              <%= f.submit "Send me reset password instructions", class: 'btn btn-sm btn-block btn-primary' %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="mt-5">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>

