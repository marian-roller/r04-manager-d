<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card mt-3">
      <div class="card-header">
        <h2>Sign up</h2>
      </div>
      <div id="signup-form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="card-body">
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field form-group mb-4">
              <%= f.label :email, class: 'font-weight-bold text-muted small' %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-sm' %>
            </div>

            <div class="field form-group mb-4">
              <%= f.label :username, class: 'font-weight-bold text-muted small' %><br />
              <%= f.text_field :username, autofocus: true, class: 'form-control form-control-sm' %>
            </div>

            <div class="field form-group mb-4">
              <%= f.label :password, class: 'font-weight-bold text-muted small' %>
              <% if @minimum_password_length %>
                <small>(<%= @minimum_password_length %> characters minimum)</small>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control form-control-sm' %>
            </div>

            <div class="field form-group mb-4">
              <%= f.label :password_confirmation, class: 'font-weight-bold text-muted small' %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-control-sm' %>
            </div>


          </div>

          <div class="card-footer text-center">
            <div class="actions">
              <%= f.submit "Sign up", class: 'btn btn-sm btn-block btn-primary' %>
            </div>
          </div>

        <% end %>
      </div>

      <div class="mt-5">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>

