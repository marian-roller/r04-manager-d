<div class="card-body border border-success">

  <div class="">

    <div class="container-fluid px-0">
      <div class="row mx-0">
        <div class="col-2 p-0">

          <% if mymovie.movie.image.attached? %>
            <%= image_tag mymovie.movie.image, class: 'card-img-top' %>
          <% else %>
            <div class="image-replacement d-flex justify-content-center align-items-center">
              <div class="text-light">
                No poster
              </div>
            </div>
          <% end %>

        </div>
        <div class="col-10 d-flex flex-column justify-content-between pr-0">
          <div>
            <div class="d-flex">
              <%= link_to mymovie.movie.title, mymovie, class: 'font-weight-bold text-decoration-none' %>
            </div>

            <div class="d-flex mb-1 info-data">
              <div class="border px-2 mr-1 rounded bg-light">
                <% if mymovie.movie.year_start %>
                  <%= mymovie.movie.year_start %>

                  <% if mymovie.movie.movie_type == 2 %>
                    <%= ' - ' %>
                  <% end %>
                  <% if mymovie.movie.year_end %>
                    <%= mymovie.movie.year_end %>
                  <% end %>
                <% end %>
              </div>

              <% if mymovie.movie.duration %>
                <div class="border px-2 mr-1 rounded bg-light">
                  <%= mymovie.movie.duration.to_s + ' min' %>
                </div>
              <% end %>

              <% if mymovie.movie.movie_type == 2 %>
                <% if mymovie.movie.seasons.size %>
                  <div class="border px-2 mr-1 rounded bg-light">
                    <span>Seasons: </span><%= mymovie.movie.seasons.size %>
                    <span> (tot. </span><%= mymovie.movie.total_episodes %> <span> ep.)</span>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>

          <div>
            <div class="d-flex">
              <% if mymovie.urgent? %>
                <a href="#"
                   class="btn btn-secondary btn-sm btn-block button-custom button-urgent"
                   data-reflex="click->MymovieStatusReflex#noturgent"
                   data-mymovie-id="<%= mymovie.id %>"
                >Make not urgent</a>
              <% else %>
                <a href="#"
                   class="btn btn-dark btn-sm btn-block button-custom button-urgent"
                   data-reflex="click->MymovieStatusReflex#urgent"
                   data-mymovie-id="<%= mymovie.id %>"
                >Make urgent</a>
              <% end %>

              <% if mymovie.status == 1 %>
                <a href="#"
                   class="btn btn-dark btn-sm ml-1 my-0 btn-block button-custom"
                   data-reflex="click->MymovieStatusReflex#start_watching"
                   data-mymovie-id="<%= mymovie.id %>"
                >Start watching</a>
              <% end %>

              <%= link_to 'Delete', mymovie, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm ml-1 my-0 btn-block button-custom' %>
            </div>
          </div>

        </div>
      </div>
    </div>

  </div>

</div>