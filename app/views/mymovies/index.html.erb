<div id="movies-index-page" class="card mt-3 mb-5">
  <div class="d-flex justify-content-between align-items-center card-header">

    <div class="movies-selector d-flex align-items-center">
      <div>
        <%= link_to mymovies_path,
                    class: "btn btn-info my-1 mx-5 #{'btn-sm' unless @allmymovies} #{'active font-weight-bold' if @allmymovies}", :action => 'go' do %>
          <h1 class="<%= 'font-weight-bold' if @allmymovies %> h6 m-0 movie-button  >">Movies</h1>
        <% end %>
      </div>

      <div>
        <%= link_to myonlytvseries_path,
                    class: "btn btn-info my-1 mx-5 #{'btn-sm' unless @allmytvseries} #{'active font-weight-bold' if @allmytvseries}", :action => 'go' do %>
          <h1 class="<%= 'font-weight-bold' if @allmytvseries %> h6 m-0 movie-button  >">Tvseries</h1>
        <% end %>
      </div>
    </div>

    <div>
      <% if user_signed_in? %>
        <%= link_to 'My new movie', new_mymovie_path, class: 'btn btn-info btn-sm' %>
      <% end %>
    </div>

  </div>
  <div class="card-body">
    <div class="row p-3">
    </div>
  </div>
</div>

<p id="notice"><%= notice %></p>

<h1>Mymovies</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Movie</th>
      <th>Description</th>
      <th>User</th>
      <th>Impression</th>
      <th>Status</th>
      <th>Urgent</th>
      <th>Watching start</th>
      <th>Watching end</th>
      <th>Times watched</th>
      <th>Ranking</th>
      <th>Watching season</th>
      <th>Last episode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <%#= debug @mymovies %>

  <tbody>
    <% @mymovies.each do |mymovie| %>
      <tr>
        <td><%= mymovie.movie.movie_type %></td>
        <td><%= mymovie.movie.title %></td>
        <td><%= mymovie.movie.description %></td>
        <td><%= mymovie.user_id %></td>
        <td><%= mymovie.impression %></td>
        <td><%= mymovie.status %></td>
        <td><%= mymovie.urgent %></td>
        <td><%= mymovie.watching_start %></td>
        <td><%= mymovie.watching_end %></td>
        <td><%= mymovie.times_watched %></td>
        <td><%= mymovie.ranking %></td>
        <td><%= mymovie.watching_season %></td>
        <td><%= mymovie.last_episode %></td>
        <td><%= link_to 'Show', mymovie %></td>
        <td><%= link_to 'Edit', edit_mymovie_path(mymovie) %></td>
        <td><%= link_to 'Destroy', mymovie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mymovie', new_mymovie_path %>
