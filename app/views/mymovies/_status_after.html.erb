<div class="card-body border">
  <div class="">
    <div class="container-fluid px-0">
      <div class="row mx-0">

        <div class="col-2 p-0">
          <% if mymovie.movie.image.attached? %>
            <%= image_tag mymovie.movie.image, class: 'card-img-top' %>
          <% else %>
            <div class="image-replacement d-flex justify-content-center align-items-center bg-secondary h-100">
              <div class="text-light">
                <small>No poster</small>
              </div>
            </div>
          <% end %>
        </div>

        <div class="col-10 d-flex flex-column justify-content-between pr-0">
          <div>
            <div class="d-flex">
              <%= link_to mymovie.movie.title, mymovie, class: 'font-weight-bold text-decoration-none' %>
            </div>

            <div class="mb-1 info-data">
              <% if mymovie.movie.ranking_avg %>
                <div class="border px-2 mr-1 rounded bg-light">
                  Total ranking: <%= mymovie.movie.ranking_avg %>
                </div>
              <% else %>
                <div class="border px-2 mr-1 rounded bg-light">
                  No ranking
                </div>
              <% end %>

              <% if mymovie.ranking %>
                <div class="border px-2 mr-1 mt-1 rounded bg-light">
                  My ranking: <%= mymovie.ranking %>
                </div>
              <% else %>
                <div class="border px-2 mr-1 mt-1 rounded bg-light">
                  No my ranking
                </div>
              <% end %>

            </div>
          </div>

          <div>
            <div class="d-flex justify-content-end">
              <a href="#"
                 class="btn btn-dark btn-sm button-custom"
                 data-reflex="click->MymovieStatusReflex#start_watching"
                 data-mymovie-id="<%= mymovie.id %>"
              >Watch again</a>
            </div>
          </div>

        </div>
      </div>
    </div>

  </div>
</div>